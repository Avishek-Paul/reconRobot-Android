<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <EditText
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="192.168.0.100"/>
    <EditText
        android:id="@+id/port"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5050"/>

    <TextView
        android:id="@+id/bdcText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forward Speed Setting: 50%" />

    <SeekBar
        android:id="@+id/baseDutyCycle"
        android:max="100"
        android:progress="50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/rdcText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn/Reverse Speed Setting: 20%" />

    <SeekBar
        android:id="@+id/reverseDutyCycle"
        android:max="100"
        android:progress="20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnonce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:onClick="streamVideo"
        android:text="Start Stream" />
</LinearLayout>